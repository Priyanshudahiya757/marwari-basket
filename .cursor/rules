# .cursor/rules - Project config and workflow documentation

[env]
MONGODB_URI=mongodb://localhost:27017/marwari-basket
JWT_SECRET=your_jwt_secret
STRIPE_SECRET_KEY=sk_test_...
SENDGRID_API_KEY=SG.xxxxx
TWILIO_ACCOUNT_SID=ACxxxx

[workflow]
# 1. Start backend: npm run dev (in /server)
# 2. Start frontend: npm run dev (in /client)
# 3. Seed data: node seed/products.js, node seed/users.js
# 4. Set up .env from .env.example
# 5. Run tests: npm test

[api]
# /api/checkout - POST - Place order
# /api/orders - GET/POST - Order management

[docs]
# See README.md for full setup and integration details 